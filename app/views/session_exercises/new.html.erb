<h1>記録</h1>

<%= form_with(model: @session_exercise, local: true) do |form| %>
  <div>
    <%= form.label :exercise_id, '種目' %>
    <%= form.text_field :exercise_id, placeholder: '種目名を入力してください' %>
</div>

  <div>
    <%= form.label :重量 %>
    <%= form.number_field :weight %>
  </div>

  <div>
    <%= form.label :回数 %>
    <%= form.number_field :reps %>
  </div>

  <div>
    <%= form.label :セット%>
    <%= form.number_field :sets %>
  </div>

  <div>
    <%= form.submit "Save" %>
  </div>
<% end %>

<%= link_to 'Back', session_exercises_path %>
