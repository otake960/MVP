<%= form_with(model: @goal, local: true) do |form| %>
  <%= form.fields_for :goal_exercises do |ge_form| %>
    <%= ge_form.label :exercise_id, "Exercise" %>
    <%= ge_form.collection_select :exercise_id, Exercise.all, :id, :name, include_blank: true %>
    <%= ge_form.number_field :target_weight, step: 0.1, placeholder: "Target Weight" %>
    <%= ge_form.number_field :repetitions, placeholder: "Repetitions" %>
  <% end %>
  <%= form.submit "Save" %>
<% end %>