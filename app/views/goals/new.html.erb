<%= form_with(model: @goal, local: true) do |form| %>
  <%= form.fields_for :goal_exercises_attributes do |ge| %>
    <%= ge.label :name, "種目名" %>
    <%= ge.text_field :name, placeholder: '種目名を入力してください' %>
    <%= ge.label :target_weight, "目標重量(kg)" %>
    <%= ge.number_field :target_weight, step: 0.1, placeholder: '目標重量を入力' %>
    <%= ge.label :repetitions, "回数" %>
    <%= ge.number_field :repetitions, placeholder: '目標回数を入力' %>
  <% end %>
  <%= form.submit "保存する" %>
<% end %>