<%= form_with(model: @goal, local: true) do |form| %>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_select :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, ['進行中', '完了', '保留'], include_blank: true %>
  </div>

  <%= form.submit "Save" %>
<% end %>